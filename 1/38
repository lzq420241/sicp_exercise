#lang sicp
(#%require "continued-fraction")

(define tolerance 0.00001)
(define target-value 0.71828)
(define (close-enough? v1 v2)
    (< (abs (- v1 v2)) tolerance))

(define (gen-d n)
  (if (< n 3) n 
      (if (< (remainder (- n 3) 3) 2) 1
          (+ 2 (* (/ (- n 2) 3) 2)))))

(define (calc-e k)
  (cont-frac-it +
                (lambda (i) 1.0)
                (lambda (i) (gen-d i))
                k))

(calc-e 8)
(find-k calc-e target-value close-enough?)